@model UserInfo
@{
    ViewBag.Title = " Başvuru Durumu";
}
<main class="text-center">
    <h1> Başvuru Durumu</h1>

    @if (Model.WillAttend)
    {
        <p>Teşekkürler @Model.Name , toplantıya katılacağınızı bildirdiniz.</p>
        <p>Toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
        <a class="btn btn-sm btn-outline-primary"href="/Meeting/List">Katılımcıları listele</a>
    }
    else
    {
        <p>@Model.Name Üzgünüz, toplantıya katılamayacağınızı bildirdiniz.</p>
        <a class="btn btn-sm btn-outline-primary" href="/Meeting/Apply">Başvuru Formu</a>

    }


</main>

