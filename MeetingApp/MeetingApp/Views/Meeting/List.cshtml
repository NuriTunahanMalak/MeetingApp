@model List<UserInfo>
@{
    ViewBag.Title = "Toplantıya Katılım listesi";
}
<main class="text-center">
    <h1 class="h4">Toplantıya Katılım listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Email</td>
                <td>Katılım Durumu</td>
                <td> <a class="btn btn-sm btn-primary" href="#">Detay</a> </td>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var user in Model)
            {
                var durum = user.WillAttend ? "Katılıyor" : "Katılmıyor";
                var ClassName = user.WillAttend ? "table-success" : "table-danger";
                if (user.WillAttend)
                {
                    i++;
                }
                <tr class="@ClassName">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        @if (user.WillAttend)
                        {
                            <span>Katılıyor</span>
                        }
                        else
                        {
                            <span>Katılmıyor</span>
                        }
                    </td>
                    <td><a class="btn btn-sm btn-primary" href="/Meeting/Details/@user.Id">Detay</a></td>
                </tr>
            })        
        
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılımcı sayısı: @i</span>
        </div>
    </div>
</main>
